<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#515151"
                android:endColor="#2a2a2a"/>
            <stroke android:color="#aaaaaa" android:width="1px"/>
            <padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="7dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#2a2a2a"
                android:endColor="#515151"/>
            <stroke android:color="#000000" android:width="1px"/>
            <padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="7dp"/>
        </shape>
    </item>
</selector>
