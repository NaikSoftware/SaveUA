<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spinner_item">
    <ImageView
        android:id="@+id/level_row_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/map_icon"/>
    <TextView
        android:id="@+id/level_row_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/level_row_icon"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@drawable/state_item_text_colors"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/level_row_icon"
        android:layout_below="@id/level_row_name"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/level_row_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/level_row_maxGamers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="12sp"/>
    </LinearLayout>
    
</RelativeLayout>
